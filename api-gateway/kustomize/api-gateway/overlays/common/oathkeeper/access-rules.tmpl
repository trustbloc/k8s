[
  {
    "id": "issuer-credential-management",
    "upstream": {
      "url": "http://vcs"
    },
    "match": {
      "url": "http://api-gateway.||DOMAIN||/issuer/profiles/<.*>/<.*>/credentials/<.*>",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "org_admin"
          ]
        }
      }
    ],
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-Tenant-ID": "{{ print .Subject }}",
            "X-API-Key": "rw_token"
          }
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    }
  },
